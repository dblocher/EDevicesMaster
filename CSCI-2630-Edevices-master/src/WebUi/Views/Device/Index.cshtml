<div class="welcome" align="center">
    <h1>My Devices</h1>
</div>
<hr />
<br />

<div class="row">
    <div class="col-lg-4">
        <p>You can view your device details below. You can also start a new claim or review the current status of a claim in progress. Please click a following option to begin. </p>
    </div>
</div>

<table class="table table-bordered table-hover">
    @foreach (var thing in Model)
    {
        <tr>
            <td>
                <h3>@thing.Name</h3>
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Details", "Details", new { @id = thing.PolicyId }, new { @class = "btn btn-lg btn-info" })
                    @Html.Partial("_ClaimButton", thing)
                </div>
            </td>
        </tr>
    }
</table>

